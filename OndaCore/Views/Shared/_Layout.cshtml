<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Onda Group</title>

    <link rel="icon" type="image/png" href="~/favicon.ico" />
    

    <environment include="Development">
        <link href="~/css/main.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />

        <link href="~/node_modules/fontawesome-free/css/all.css" rel="stylesheet" />

        <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    </environment>
    <environment exclude="Development">
        <link href="~/css/main.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />

        <link href="~/node_modules/fontawesome-free/css/all.css" rel="stylesheet" />

        <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    </environment>
</head>
<body>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        <nav id="nav">
            <ul id="navheader">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
                <li>
                    <a href="#">Рассчитать</a>
                    <ul>
                        <li>
                            <a href="#">Ступени</a>
                            <ul>
                                <li><a href="#">Стандарт</a></li>
                                <li><a href="#">Техно</a></li>
                                <li><a href="#">Евро</a></li>
                                <li><a href="#">Double</a></li>
                            </ul>
                        </li>
                        <li><a href="#">Столешница</a></li>
                        <li><a href="#">Мозаика</a></li>
                        <li><a href="#">Модульное панно</a></li>
                    </ul>
                </li>
                <li><a asp-area="" asp-controller="Gallery" asp-action="Index/Products">Изделия</a></li>
                <li><a asp-area="" asp-controller="Gallery" asp-action="Index/Materials">Материалы</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Contact">Контакты</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="About">О компании</a></li>
            </ul>
        </nav>

        @RenderBody()
        <footer>
            <div class="row">
                <div class="col-4">
                    <h5 class="social">Мы в социальных сетях:</h5>
                    <!-- Icons -->
                    <ul class="icons">
                        <li><a href="https://www.facebook.com/Onda-Group-463147537360886" target="_blank" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                        <li><a href="https://www.instagram.com/onda_group/" target="_blank" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                        <li><a href="#" class="icon fa-vk"><span class="label">Вконтакте</span></a></li>
                    </ul>
                    <p class="copyright">&copy; Onda-Group @DateTime.Now.ToShortDateString()</p>
                </div>
                <div class="col-8">
                    <ul class="nav">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Расчитать</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Изделия</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="Materials">Материалы</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Контакты</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">О компании</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/util.js"></script>
        <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/node_modules/fontawesome-free/js/all.js"></script>
        <script src="~/node_modules/popper.js/dist/umd/popper.min.js"></script>
        <script src="~/js/breakpoints.min.js"></script>
        <script src="~/js/browser.min.js"></script>
        <script src="~/js/jquery.dropotron.min.js"></script>
        <script src="~/js/site.js"></script>
        <script src="~/js/main.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>

    </environment>
    <environment exclude="Development">
        <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/util.js"></script>
        <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/node_modules/fontawesome-free/js/all.js"></script>
        <script src="~/node_modules/popper.js/dist/umd/popper.min.js"></script>
        <script src="~/js/breakpoints.min.js"></script>
        <script src="~/js/browser.min.js"></script>
        <script src="~/js/jquery.dropotron.min.js"></script>
        <script src="~/js/site.js"></script>
        <script src="~/js/main.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
