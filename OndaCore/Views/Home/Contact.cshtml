@model EmplModel.Employee[]


        @{ ViewData["Title"] = "Контакты"; }

<div id="page-wrapper">
    <h2>@ViewData["Title"]</h2>
    <h4>@ViewData["Message"]</h4>

    <div class="container">
        @foreach (EmplModel.Employee a in Model)
        {
          @if (a.name != null)
           {
            <div class="row" id="employee">
                <div class="col-3">
                    <img class="img-fluid" src="http://files.etna.com.ru/AX5DOCS/@(a.FileName).@(a.FileType)" />
                </div>
                <div class="col-9">
                    <table>
                        <tr>
                            <td>
                                <b>@a.name</b>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                График работы: @a.calendar
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @a.title
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <i class="far fa-envelope"></i>
                                <a href="mailto:@a.Email" target="_blank">@a.Email</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <i class="fas fa-mobile-alt"></i>
                                <a href="tel:@a.CellularPhone" target="_blank">@a.CellularPhone</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <i class="fas fa-phone-square"></i> @a.PhoneLocal
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
           }
        }
    </div>
</div>