
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="is-preload">
    <div id="page-wrapper">
        <div id="carouselCountertop" class="carousel" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselCountertop" data-slide-to="0" class="active"></li>
                <li data-target="#carouselCountertop" data-slide-to="1"></li>
                <li data-target="#carouselCountertop" data-slide-to="2"></li>
                <li data-target="#carouselCountertop" data-slide-to="3"></li>
                <li data-target="#carouselCountertop" data-slide-to="4"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/countertops/Stolesh17_Z.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/countertops/Stolesh19_Z.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/countertops/Stolesh24_Z.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/countertops/Stolesh25_Z.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/countertops/Stolesh26_Z.jpg" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Посмотреть больше?</h5>
                        <p><a href="#" class="button">В галлерею</a></p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselCountertop" role="button" data-slide-to="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselCountertop" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Highlights -->
        <section id="highlights" class="wrapper style1">
            <div class="container">
                <div class="row">
                    <section class="col-4">
                        <div class="box highlight">
                            <i class="icon major fa-paper-plane"></i>
                            <h3>Заявка на расчет</h3>
                            <p>Вы можете оставить заявку на расчет вашего изделия, если не удалось рассчитать с помощью наших калькуляторов</p>
                        </div>
                    </section>
                    <section class="col-4">
                        <div class="box highlight">
                            <i class="icon major fa-pencil"></i>
                            <h3>Напишите нам</h3>
                            <p>Хотите оставить отзыв? Внести предложения? Напишите нам!</p>
                        </div>
                    </section>
                    <section class="col-4">
                        <div class="box highlight">
                            <i class="icon major fa-wrench"></i>
                            <h3>Рекламация</h3>
                            <p>Отправьте рекламацию, и мы сделаем все возможное для того чтобы устранить проблему</p>
                        </div>
                    </section>
                </div>
            </div>
        </section>

        <!--Our Projects-->
        <section class="wrapper style1">
            <h2 style="text-align:center">Наши проекты</h2>
            <div class="proj_container">
                <!-- Full-width images with number text -->
                <div class="mySlides">
                    <div class="numbertext">1 / 6</div>
                    <img class="img-fluid" src="~/images/projects/slide1.jpg" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">2 / 6</div>
                    <img class="img-fluid" src="~/images/projects/slide2.jpg" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">3 / 6</div>
                    <img class="img-fluid" src="~/images/projects/slide3.jpg" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">4 / 6</div>
                    <img class="img-fluid" src="~/images/projects/slide4.jpg" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">5 / 6</div>
                    <img class="img-fluid" src="~/images/projects/slide5.jpg" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">6 / 6</div>
                    <img class="img-fluid" src="~/images/projects/slide6.jpg" style="width:100%">
                </div>

                <!-- Next and previous buttons -->
                <a id="projPrev" class="prev">&#10094;</a>
                <a id="projNext" class="next">&#10095;</a>

                <!-- Image text -->
                <div class="caption-container">
                    <p id="caption"></p>
                </div>

                <!-- Thumbnail images -->
                <div id="thumbnail" class="row">
                    <div class="column">
                        <img class="demo active" src="~/images/projects/slide1_t.jpg" style="width:100%" data-n="1" alt="Столешница с островом и стеновой панелью">
                    </div>
                    <div class="column">
                        <img class="demo cursor" src="~/images/projects/slide2_t.jpg" style="width:100%" data-n="2" alt="Столешница со стеновой панелью">
                    </div>
                    <div class="column">
                        <img class="demo cursor" src="~/images/projects/slide3_t.jpg" style="width:100%" data-n="3" alt="Столешница с островом и стеновой панелью">
                    </div>
                    <div class="column">
                        <img class="demo cursor" src="~/images/projects/slide4_t.jpg" style="width:100%" data-n="4" alt="Кухонный стол">
                    </div>
                    <div class="column">
                        <img class="demo cursor" src="~/images/projects/slide5_t.jpg" style="width:100%" data-n="5" alt="Крышка для ванны">
                    </div>
                    <div class="column">
                        <img class="demo cursor" src="~/images/projects/slide6_t.jpg" style="width:100%" data-n="6" alt="Санузел">
                    </div>
                </div>
            </div>
        </section>
        <section id="sec1" class="wrapper style1">
            <div class="container">
                <div class="row">
                    <section class="col-6 col-12-narrower">
                        <div class="box post">
                            <a asp-controller="" asp-action="" class="image left"><img src="~/images/double.svg" alt="" /></a>
                            <div class="inner">
                                <h3>Ступени Double</h3>
                                <p>Расчитайте ступени Double</p>
                            </div>
                        </div>
                    </section>
                    <section class="col-6 col-12-narrower">
                        <div class="box post">
                            <a a asp-controller="" asp-action="" class="image left"><img src="~/images/euro.svg" alt="" /></a>
                            <div class="inner">
                                <h3>Ступени Euro</h3>
                                <p>Расчитайте ступени Euro</p>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="row">
                    <section class="col-6 col-12-narrower">
                        <div class="box post">
                            <a a asp-controller="" asp-action="" class="image left"><img src="~/images/techno.svg" alt="" /></a>
                            <div class="inner">
                                <h3>Ступени Техно</h3>
                                <p>Расчитайте ступени Техно</p>
                            </div>
                        </div>
                    </section>
                    <section class="col-6 col-12-narrower">
                        <div class="box post">
                            <a a asp-controller="" asp-action="" class="image left"><img src="~/images/standart.svg" alt="" /></a>
                            <div class="inner">
                                <h3>Ступени Стандарт</h3>
                                <p>Расчитайте ступени Техно</p>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
        <br />
        <!-- Posts -->
        <!-- CTA -->
        <section id="cta" class="wrapper style3">
            <div class="container">
                <header>
                    <h2>Появилась отличная идея?! </h2>
                    <button type="button" class="button" data-toggle="modal" data-target="#writeUsModal">
                        Напишите нам!
                    </button>
                </header>
            </div>
        </section>

        <!-- Footer -->
        <div id="footer">
            <div class="container">
                <div class="row">
                    <section class="col-6 col-12-narrower">
                        <div class="modal fade" id="writeUsModal" tabindex="-1" aria-hidden="true" role="dialog" >
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <form>
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="name" id="name" placeholder="Ваше имя" />

                                            </div>
                                            <div class="form-group">
                                                <input type="email" class="form-control" name="email" id="email" placeholder="Email" />
                                            </div>
                                            <div class="form-group">
                                                <label for="file">Прикрепить чертеж, рисунок, картинку, фото!</label>
                                                <input name="myFile" type="file" multiple>
                                            </div>
                                            <div class="form-group">
                                                <textarea name="message" class="form-control" id="message" placeholder="Сообщение" rows="10"></textarea>
                                            </div>
                                        </form>
                                            <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                                                    <input type="submit" class="btn btn-primary" value="Отправить" />
                                            </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                    </section>
                </div>
            </div>
            <!-- Icons -->
            <ul class="icons">
                <li><a href="https://www.facebook.com/Onda-Group-463147537360886" target="_blank" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="https://www.instagram.com/onda_group/" target="_blank" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                <li><a href="#" class="icon fa-vk"><span class="label">Вконтакте</span></a></li>
            </ul>
        </div>
    </div>

</body>
